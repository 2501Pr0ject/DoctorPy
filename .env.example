# DoctorPy - Variables d'environnement
# Copiez ce fichier en .env et modifiez les valeurs selon vos besoins

# =============================================================================
# APPLICATION
# =============================================================================
APP_NAME=DoctorPy
ENVIRONMENT=development
DEBUG=true
HOST=localhost
PORT=8000
LOG_LEVEL=INFO

# =============================================================================
# BASE DE DONNÉES
# =============================================================================
DATABASE_URL=sqlite:///./data/databases/doctorpy.db
DATABASE_ECHO=false

# Base de données pour les tests
TEST_DATABASE_URL=sqlite:///./data/databases/test_doctorpy.db

# =============================================================================
# SÉCURITÉ & AUTHENTIFICATION  
# =============================================================================
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# Hosts et origines autorisés
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8501,http://127.0.0.1:8501

# =============================================================================
# OLLAMA & LLM
# =============================================================================
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b
OLLAMA_TIMEOUT=120

# Modèles disponibles (séparés par des virgules)
AVAILABLE_MODELS=llama3.1:8b,codellama:7b,mistral:7b

# Paramètres de génération
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=1000
LLM_TOP_P=0.9

# =============================================================================
# RAG & VECTOR STORE
# =============================================================================
VECTOR_STORE_TYPE=chroma
VECTOR_STORE_PATH=./vector_stores/chroma_db
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Paramètres de recherche
RAG_SEARCH_K=5
RAG_SCORE_THRESHOLD=0.7
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# =============================================================================
# AGENTS & LANGGRAPH
# =============================================================================
# Gestion des états
STATE_MANAGER_CHECKPOINT_PATH=./data/checkpoints
MAX_CONCURRENT_SESSIONS=100
SESSION_TIMEOUT_MINUTES=30

# Agents
ENABLE_CODE_EXECUTION=true
CODE_EXECUTION_TIMEOUT=30
SANDBOX_MEMORY_LIMIT=512

# =============================================================================
# QUÊTES & PROGRESSION
# =============================================================================
QUESTS_DATA_PATH=./data/quests
DEFAULT_DIFFICULTY=beginner
AUTO_PROGRESSION=true

# XP et niveaux
BASE_XP_PER_QUEST=100
LEVEL_MULTIPLIER=1.5

# =============================================================================
# STREAMLIT
# =============================================================================
STREAMLIT_PORT=8501
STREAMLIT_THEME_PRIMARY_COLOR=#FF6B6B
STREAMLIT_THEME_BACKGROUND_COLOR=#FFFFFF
STREAMLIT_THEME_SECONDARY_BACKGROUND_COLOR=#F0F2F6

# =============================================================================
# API EXTERNE (Optionnel)
# =============================================================================
# OpenAI (si vous voulez utiliser GPT)
OPENAI_API_KEY=your-openai-api-key-here

# Hugging Face (pour certains modèles)
HUGGINGFACE_API_KEY=your-hf-api-key-here

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================
ENABLE_ANALYTICS=true
METRICS_RETENTION_DAYS=30

# Logging
LOG_FILE_PATH=./logs/app.log
LOG_ROTATION_SIZE=10MB
LOG_BACKUP_COUNT=5

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# =============================================================================
# EMAIL (pour notifications, mot de passe oublié, etc.)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@doctorpy.dev

# =============================================================================
# REDIS (Optionnel - pour cache et sessions)
# =============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
CACHE_TTL_SECONDS=3600

# =============================================================================
# DÉVELOPPEMENT
# =============================================================================
# Auto-reload en mode développement
AUTO_RELOAD=true

# Profiling et debug
ENABLE_PROFILING=false
ENABLE_SQL_ECHO=false

# Données de test
CREATE_SAMPLE_DATA=true
SAMPLE_USER_COUNT=5

# =============================================================================
# PRODUCTION
# =============================================================================
# Sentry pour monitoring d'erreurs
SENTRY_DSN=your-sentry-dsn-here

# SSL/TLS
SSL_KEYFILE=
SSL_CERTFILE=

# Workers
WORKERS_COUNT=1
WORKER_CLASS=uvicorn.workers.UvicornWorker

# =============================================================================
# CHEMINS PERSONNALISÉS
# =============================================================================
DATA_DIR=./data
LOGS_DIR=./logs
TEMP_DIR=./temp
BACKUP_DIR=./backups

# Chemins des modèles et données
MODELS_PATH=./models
DOCUMENTATION_PATH=./data/raw/documentation
PROCESSED_DATA_PATH=./data/processed

# =============================================================================
# FONCTIONNALITÉS EXPÉRIMENTALES
# =============================================================================
ENABLE_VOICE_INTERACTION=false
ENABLE_IMAGE_ANALYSIS=false
ENABLE_COLLABORATIVE_MODE=false

# =============================================================================
# INTÉGRATIONS
# =============================================================================
# GitHub (pour partage de code)
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Discord (pour communauté)
DISCORD_WEBHOOK_URL=your-discord-webhook-url

# =============================================================================
# SECURITY HEADERS
# =============================================================================
SECURITY_HEADERS_ENABLED=true
CSRF_PROTECTION=true
XSS_PROTECTION=true